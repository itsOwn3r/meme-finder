generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Memes {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  meme        String
  title       String
  ocr         String?
  description String?
  source      String?
  category    String   @default("general")
  tags        String[] @default([])
}
